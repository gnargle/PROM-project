def signal_filter(input_array): 
	
	sort = input_array
	sort.sort()
	length = len(input_array)
	
	if length == 0:
		pass
	
	elif (length % 2)  == 0:
		return ((sort[length/2] + sort[(length/2) -1]) / 2.0)
	else:
		return sort[length/2]



			











